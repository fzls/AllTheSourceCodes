	/**
	 * Create the application.
	 */
	public menutest1() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setTitle("\u83DC\u5355");
		frame.setBounds(100, 100, 450, 300);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JMenuBar menuBar = new JMenuBar();
		menuBar.setBounds(0, 0, 383, 21);
		frame.getContentPane().add(menuBar);
		
		JMenu menu = new JMenu("\u6570\u636E\u7EF4\u62A4");
		menuBar.add(menu);
		
		JMenuItem menuItem = new JMenuItem("\u6559\u5E08\u6570\u636E\u7EF4\u62A4");
		menu.add(menuItem);
		
		JMenuItem menuItem_1 = new JMenuItem("\u5B66\u751F\u6570\u636E\u7EF4\u62A4");
		menu.add(menuItem_1);
		
		JMenu menu_1 = new JMenu("\u6A21\u7CCA\u67E5\u8BE2");
		menuBar.add(menu_1);
		
		JMenuItem menuItem_2 = new JMenuItem("\u6559\u5E08\u59D3\u540D\u67E5\u8BE2");
		menu_1.add(menuItem_2);
		
		JMenuItem menuItem_3 = new JMenuItem("\u5B66\u751F\u59D3\u540D\u67E5\u8BE2");
		menu_1.add(menuItem_3);
		
